%section#welcome
  .page-header
    - if signed_in?
      %h1
        Hello, #{current_user.name}
      %p
        %img{:src => current_user.avatar, :alt => "Avatar"}
      %p= link_to("All vines", "/vines")
    - else
      %h1
        Hello, stranger
      %p
        = link_to("Sign in with your twitter account", "/auth/twitter")
    %p
      &nbsp;
